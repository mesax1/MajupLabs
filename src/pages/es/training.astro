---
import PageLayout from "@/layouts/Base.astro";
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { trainingPricing, formatPrice } from "@/data/pricing";

const meta = {
	description: "Capacitaciones corporativas en automatización e inteligencia artificial con N8N, Google Workspace, Microsoft Copilot y Power Automate. Transforma tu equipo y escala tu empresa con IA.",
	title: "Capacitaciones Corporativas en IA y Automatización | MajupLabs",
};

// Get training courses for Spanish
const trainingCourses: CollectionEntry<'training'>[] = await getCollection('training', ({ data }) => {
	return data.draft !== true && data.lang === 'es';
});

// Sort by order
const sortedCourses = trainingCourses.sort((a, b) => {
	const orderA = a.data.order ?? Infinity;
	const orderB = b.data.order ?? Infinity;
	return orderA - orderB;
});

// Helper to get price label from centralized config
function getPriceLabel(pricingKey: string): string | null {
	const pricing = trainingPricing[pricingKey as keyof typeof trainingPricing];
	if (pricing && 'label' in pricing) {
		return pricing.label.es;
	}
	return null;
}
