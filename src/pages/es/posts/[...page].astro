---
import type { CollectionEntry } from "astro:content";
import Pagination from "@/components/Paginator.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import { getAllPosts, getUniqueTags, groupPostsByYear } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";
import type { GetStaticPaths, Page } from "astro";
import { Icon } from "astro-icon/components";
import Badge from "@/components/Badge.astro";
import SeriesPanel from "@/components/blog/SeriesPanel.astro";
import { getCollection } from "astro:content";

export const getStaticPaths = (async ({ paginate }) => {
	const MAX_POSTS_PER_PAGE = 5;
	const MAX_TAGS = 20;
	const allPosts = await getAllPosts("es"); // Filter for Spanish posts only
	const uniqueTags = getUniqueTags(allPosts).slice(0, MAX_TAGS);
	const allSeries = await getCollection("series");
	return paginate(allPosts.sort(collectionDateSort), {
		pageSize: MAX_POSTS_PER_PAGE,
		props: { uniqueTags, allSeries },
	});
}) satisfies GetStaticPaths;

interface Props {
	page: Page<CollectionEntry<"post">>;
	uniqueTags: string[];
	allSeries: CollectionEntry<"series">[];
}

const { page, uniqueTags, allSeries } = Astro.props;

const meta = {
	description: "IA, Machine Learning, RAG, LLMs, y más",
	title: "Publicaciones",
};

const paginationProps = {
	...(page.url.prev && {
		prevUrl: {
			text: "← Página Anterior",
			url: page.url.prev,
		},
	}),
	...(page.url.next && {
		nextUrl: {
			text: "Página Siguiente →",
			url: page.url.next,
		},
	}),
};

const groupedByYear = groupPostsByYear(page.data);
const descYearKeys = Object.keys(groupedByYear).sort((a, b) => +b - +a);
---

<PageLayout meta={meta}>
	<h1 class="title mb-6 flex items-center gap-2">
		Publicaciones
		<a class="text-accent-two" href="/rss.xml" target="_blank">
			<span class="sr-only">RSS feed</span>
			<Icon aria-hidden="true" class="h-6 w-6" focusable="false" name="mdi:rss" />
		</a>
	</h1>
	<div class="grid gap-y-8 sm:grid-cols-[auto_1fr_auto] sm:gap-x-8">
		<SeriesPanel allSeries={allSeries} />
		<section aria-label="Lista de publicaciones del blog" class="grow">
			{
				descYearKeys.map((yearKey) => (
					<>
						<h4 class="title">{yearKey}</h4>
						<ul class="mb-8 mt-4 space-y-8 text-start">
							{groupedByYear[yearKey]?.map((p) => (
								<li class="grid gap-2 sm:grid-cols-[auto_1fr] sm:[&_q]:col-start-2">
									<PostPreview post={p} withDesc={true} />
								</li>
							))}
						</ul>
					</>
				))
			}
		</section>
		{
			!!uniqueTags.length && (
				<aside class="md:min-w-[14rem] md:max-w-[14rem] md:basis-[14rem]">
					<h4 class="title mb-4 flex gap-2">
						Etiquetas
					</h4>
					<ul class="flex flex-wrap gap-2">
						{uniqueTags.map((tag) => (
							<li>
								<a aria-label={`Ver todas las publicaciones con la etiqueta: ${tag}`} href={`/es/tags/${tag}`}>
									<Badge variant="muted" title={tag} />
								</a>
							</li>
						))}

						<span class="text-base ms-auto inline-flex items-center h-6 sm:text-end">
							<a
								aria-label="Ver todas las categorías del blog"
								class="font-medium text-accent sm:hover:text-accent-two"
								href="/es/tags/"
							>
								Ver todas →
							</a>
						</span>	
					</ul>
				</aside>
			)
		}
	</div>
	<Pagination {...paginationProps} />
</PageLayout>

